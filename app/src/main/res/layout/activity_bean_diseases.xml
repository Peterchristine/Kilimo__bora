<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.kilimo_bora.BeanDiseases">
    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/textviewbeans"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/Bean_diseases"/>

    <ListView
        android:id="@+id/BeansListview"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textviewbeans"
        android:layout_height="wrap_content"
        android:entries="@array/Bean_disease_arrays"
        android:prompt="@string/Bean_diseases" />


</RelativeLayout>
