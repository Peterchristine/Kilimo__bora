<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.hp.kilimo_bora.Main">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/iclauncher" />
    <TextView
        android:layout_width="fill_parent"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="KILIMO BORA"
        android:typeface="normal"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textStyle="italic|bold"
            android:text="-Become an effective farmer"
            android:layout_height="wrap_content" /></RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="60dp"
        android:layout_height="fill_parent">
        <Button
            android:layout_width="fill_parent"
            android:background="@color/holo_light_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="Explore"
            android:id="@+id/buttonexplore"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>


