<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.kilimo_bora.LethalNecrosisFragment">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewlethal"
        android:text="Sample Maize crop on Lethal Necrosis" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewleafmosaic"
        android:id="@+id/lethalnecrosisimageview"
        android:background="@drawable/lethal_necrosis_on_maize"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/MitigationLethal"
        android:layout_below="@+id/lethalnecrosisimageview"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
