<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_light_blue"
    tools:context="com.example.hp.kilimo_bora.legumeslist">

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/textviewlegumes"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Legumes"/>


    <ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listview1"
    android:entries="@array/legume_arrays"
    android:prompt="@string/legumes"
    android:layout_below="@+id/textviewlegumes"/>




</RelativeLayout>
