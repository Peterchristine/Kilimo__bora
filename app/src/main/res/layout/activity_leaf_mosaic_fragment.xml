<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.kilimo_bora.LeafMosaicFragment">

    <TextView
        android:layout_width="fill_parent"
        android:textStyle="bold"
        android:id="@+id/textviewleafmosaic"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Sample Maize Crop on Leaf Mosaic"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewleafmosaic"
        android:id="@+id/leafmosaicisimageview"
        android:background="@drawable/leafmosaic_on_maize">


    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leafmosaicisimageview">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/mitigation"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/Mitigation"
        android:layout_below="@id/leafmosaicisimageview"
        android:layout_alignParentBottom="true"/>

        />
    <TextView
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="match_parent"
        android:text="@string/MitigationLethal"
        android:layout_below="@id/leafmosaicisimageview"
        android:layout_alignParentBottom="true"/>

    </LinearLayout>

</RelativeLayout>
