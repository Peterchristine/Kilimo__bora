<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.hp.kilimo_bora.LethalNecrosis">




    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/textviewlethalnecrosis"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Sample Maize Crop on Lethal Necrosis"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewlethalnecrosis"
        android:id="@+id/lethalnecrosisimageview"
        android:background="@drawable/lethal_necrosis_on_maize"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lethalnecrosisimageview">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/mitigation"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/Mitigation"
            android:layout_below="@id/lethalnecrosisimageview"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="@string/MitigationLethal"
            android:layout_below="@id/mitigation" />

    </LinearLayout>




</RelativeLayout>
